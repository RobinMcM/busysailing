# OpenAI Integration (Required for AI responses)
# Get these from Replit Secrets or OpenAI dashboard
AI_INTEGRATIONS_OPENAI_BASE_URL=https://api.openai.com/v1
AI_INTEGRATIONS_OPENAI_API_KEY=your-openai-api-key-here

# Node Environment
NODE_ENV=development

# Wav2Lip Service URL (Frontend)
# For development: http://localhost:5001
# For production: https://your-wav2lip-service.onrender.com
VITE_WAV2LIP_SERVICE_URL=http://localhost:5001

# Flask Service Port (Backend - Wav2Lip only)
# Render will set this automatically
PORT=5001

# Flask Debug Mode (Wav2Lip only)
FLASK_DEBUG=False
