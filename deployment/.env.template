# DigitalOcean Deployment Environment Variables
# Copy this file to .env and fill in your actual values
# Get these values from your Replit Secrets tab

# =============================================================================
# DATABASE (REQUIRED)
# =============================================================================
# PostgreSQL connection string from Replit Database
# Format: postgresql://username:password@host:port/database
# Find this in Replit Secrets as DATABASE_URL
DATABASE_URL=postgresql://user:password@host.postgres.replit.com:5432/database

# =============================================================================
# AI SERVICES (REQUIRED)
# =============================================================================
# Groq API - Primary AI chat provider (REQUIRED)
# Get from: https://console.groq.com/keys
# Copy from Replit Secrets: GROQ_API_KEY
GROQ_API_KEY=your_groq_api_key_here

# AvatarTalk API - Avatar video generation (REQUIRED)
# Get from: https://avatartalk.ai
# Copy from Replit Secrets: AVATARTALK_API_KEY
AVATARTALK_API_KEY=your_avatartalk_api_key_here

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================
# OpenAI API - For TTS voices (optional, falls back to Web Speech API)
# Copy from Replit Secrets: OPENAI_API_KEY
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# APPLICATION SECURITY
# =============================================================================
# Admin dashboard password (defaults to MKS2005 if not set)
ADMIN_PASSWORD=MKS2005

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Node environment
NODE_ENV=production

# Application port (internal)
PORT=5000

# Domain name for SSL certificates (update with your domain)
DOMAIN_NAME=yourdomain.com
EMAIL=your-email@example.com
